<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="6dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="10dp"
    card_view:cardMaxElevation="6dp"
    card_view:cardBackgroundColor="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFotoUsuarioPost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/hearmenow"/>

            <TextView
                android:id="@+id/txtNomeUsuarioPost"
                android:layout_below="@id/txtTempoNoticia"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:textColor="#262626"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Fulando de tal"
                android:gravity="center_vertical"
                android:lines="1"/>

            <TextView
                android:id="@+id/txtTempoPost"
                android:layout_below="@id/txtNomeUsuarioPost"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_alignParentRight="true"
                android:textColor="#7f7f7f"
                android:textSize="13sp"
                android:text="há 3 horas atrás"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtConteudoPost"
                android:layout_below="@id/imgFotoUsuarioPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#262626"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis rhoncus volutpat justo gravida malesuada. Pellentesque pulvinar, ante placerat commodo mattis, ipsum enim pulvinar orci, non accumsan urna neque vitae tellus."/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFotoUsuarioPost2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/hearmenow"/>

            <TextView
                android:id="@+id/txtNomeUsuarioPost2"
                android:layout_below="@id/txtTempoNoticia"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:textColor="#262626"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Fulando de tal"
                android:gravity="center_vertical"
                android:lines="1"/>

            <TextView
                android:id="@+id/txtTempoPost2"
                android:layout_below="@id/txtNomeUsuarioPost2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_alignParentRight="true"
                android:textColor="#7f7f7f"
                android:textSize="13sp"
                android:text="há 3 horas atrás"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtConteudoPost2"
                android:layout_below="@id/imgFotoUsuarioPost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#262626"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis rhoncus volutpat justo gravida malesuada. Pellentesque pulvinar, ante placerat commodo mattis, ipsum enim pulvinar orci, non accumsan urna neque vitae tellus."/>

            <ImageView
                android:id="@+id/imgFotoPost"
                android:layout_below="@+id/txtConteudoPost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFotoUsuarioPost3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/hearmenow"/>

            <TextView
                android:id="@+id/txtNomeUsuarioPost3"
                android:layout_below="@id/txtTempoNoticia"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:textColor="#262626"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Fulando de tal"
                android:gravity="center_vertical"
                android:lines="1"/>

            <TextView
                android:id="@+id/txtTempoPost3"
                android:layout_below="@id/txtNomeUsuarioPost3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_alignParentRight="true"
                android:textColor="#7f7f7f"
                android:textSize="13sp"
                android:text="há 3 horas atrás"
                android:gravity="center_vertical"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>