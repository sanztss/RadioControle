<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="accessweb.com.br.radiocontrole.fragment.PerfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bgFotoUsuario"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoUsuario"
            android:layout_below="@+id/bgFotoUsuario"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"/>

        <TextView
            android:id="@+id/nomeUsuario"
            android:layout_below="@+id/fotoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do usuÃ¡rio"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/emailUsuario"
            android:layout_below="@+id/nomeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nomedousuario@gmail.com"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_below="@+id/emailUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button android:id="@+id/btnEditarPerfil"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Editar Perfil"
                android:background="#fff"
                android:textColor="@color/colorPrimary"
                android:elevation="4dp"/>

            <Button android:id="@+id/btnAlterarFoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Alterar Foto"
                android:background="#fff"
                android:textColor="@color/colorPrimary"
                android:elevation="4dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button android:id="@+id/btnSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="SAIR"
        android:background="#aaaaaa"
        android:textColor="@android:color/white"
        android:elevation="4dp"/>

</LinearLayout>